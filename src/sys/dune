;; Test of the Sys library

;; this prevents the tests from running on a default build

(alias
 (name default)
 (package multicoretests)
 (deps stm_tests.exe))

(executable
 (name stm_tests)
 (modules stm_tests)
 (libraries qcheck-stm.sequential qcheck-stm.domain)
 (preprocess
  (pps ppx_deriving.show)))

(rule
 (alias runtest)
 (package multicoretests)
 (deps stm_tests.exe)
 (action
  (run ./%{deps} --verbose)))
