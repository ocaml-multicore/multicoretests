;; Test of the Sys library

(test
 (name stm_tests)
 (modules stm_tests)
 (package multicoretests)
 (libraries sys qcheck-stm.sequential qcheck-stm.domain)
 (preprocess (pps ppx_deriving.show))
 (action (run %{test} --verbose))
)

(rule
 (target sys.ml)
 (action (copy %{ocaml-config:standard_library}/%{target} %{target}))
)

(library
 (name sys)
 (modules sys)
 (flags (:standard -w -9))
 (instrumentation (backend bisect_ppx))
)
