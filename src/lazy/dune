;; Parallel STM and Lin tests of the stdlib Lazy module

;; this prevents the tests from running on a default build
(alias
 (name default)
 (package multicoretests)
 (deps lin_tests.exe stm_tests.exe lin_tests_dsl.exe))

(executable
 (name stm_tests)
 (modules stm_tests)
 (libraries STM)
 (preprocess (pps ppx_deriving.show)))

(rule
 (alias runtest)
 (package multicoretests)
 (deps stm_tests.exe)
 (action (run ./%{deps} --verbose)))

(executable
 (name lin_tests)
 (modules lin_tests)
 (libraries lin)
 (preprocess (pps ppx_deriving.show ppx_deriving.eq)))

; (rule
;  (alias runtest)
;  (package multicoretests)
;  (deps lin_tests.exe)
;  (action (run ./%{deps} --verbose)))

(executable
 (name lin_tests_dsl)
 (modules lin_tests_dsl)
 (libraries lin))

; (rule
;  (alias runtest)
;  (package multicoretests)
;  (deps lin_tests_dsl.exe)
;  (action (run ./%{deps} --verbose)))
