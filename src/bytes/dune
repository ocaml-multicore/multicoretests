;; Tests of the stdlib Bytes library

;; this prevents the tests from running on a default build

(alias
 (name default)
 (package multicoretests)
 (deps
   lin_tests_dsl.exe
   stm_tests.exe))

;; Linearizability tests

(executable
 (name lin_tests_dsl)
 (modules lin_tests_dsl)
 (libraries lin))

(executable
 (name stm_tests)
 (modules stm_tests)
 (libraries STM)
 (preprocess
  (pps ppx_deriving.show)))

(rule
 (alias runtest)
 (package multicoretests)
 (deps stm_tests.exe)
 (action
  (run ./%{deps} --verbose)))

(rule
 (alias runtest)
 (package multicoretests)
 (deps lin_tests_dsl.exe)
 (action
  (run ./%{deps} --verbose)))
