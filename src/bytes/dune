;; Tests of the stdlib Bytes library

;; this prevents the tests from running on a default build

(alias
 (name default)
 (package multicoretests)
 (deps stm_tests.exe lin_tests_dsl.exe))

;; Linearization tests

(executable
 (public_name lin_tests_dsl)
 (package multicoretests)
 (modules lin_tests_dsl)
 (libraries qcheck-lin.domain qcheck-lin.thread))

(executable
 (public_name stm_tests)
 (package multicoretests)
 (modules stm_tests)
 (libraries qcheck-stm.sequential qcheck-stm.domain)
 (preprocess
  (pps ppx_deriving.show)))

(rule
 (alias runtest)
 (package multicoretests)
 (deps stm_tests.exe)
 (action
  (run ./%{deps} --verbose)))

(rule
 (alias runtest)
 (package multicoretests)
 (deps lin_tests_dsl.exe)
 (action
  (run ./%{deps} --verbose)))
